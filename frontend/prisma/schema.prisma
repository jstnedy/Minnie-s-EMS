generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SUPERVISOR
  EMPLOYEE
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
}

enum PayrollStatus {
  DRAFT
  FINAL
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  employee Employee?

  createdPayrollRuns PayrollRun[]        @relation("PayrollRunCreatedBy")
  createdAdjustments PayrollAdjustment[] @relation("PayrollAdjustmentCreatedBy")
  audits             AuditLog[]
}

model Employee {
  id                String         @id @default(cuid())
  employeeId        String         @unique @map("employee_id")
  firstName         String         @map("first_name")
  lastName          String         @map("last_name")
  email             String?        @unique
  contactNumber     String?        @map("contact_number")
  roleId            String         @map("role_id")
  passkeyHash       String         @map("passkey_hash")
  hourlyRate        Decimal        @db.Decimal(10, 2) @map("hourly_rate")
  status            EmployeeStatus @default(ACTIVE)
  userId            String?        @unique @map("user_id")
  mustChangePasskey Boolean        @default(false) @map("must_change_passkey")
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime       @updatedAt @map("updated_at")

  user           User?               @relation(fields: [userId], references: [id])
  role           Role                @relation(fields: [roleId], references: [id])
  attendanceLogs AttendanceLog[]
  payrollItems   PayrollItem[]
  adjustments    PayrollAdjustment[]
  passkeyAttempt PasskeyAttempt?

  @@index([roleId])
}

model Role {
  id        String   @id @default(cuid())
  name      String   @unique
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  employees Employee[]
}

model AttendanceLog {
  id         String   @id @default(cuid())
  employeeId String
  timeIn     DateTime
  timeOut    DateTime?
  source     String
  deviceInfo String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  editedBy   String?
  editedAt   DateTime?
  editReason String?

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId, timeIn])
  @@index([timeIn])
}

model PayrollRun {
  id        String        @id @default(cuid())
  month     Int
  year      Int
  status    PayrollStatus @default(DRAFT)
  createdBy String
  createdAt DateTime      @default(now())

  creator     User                @relation("PayrollRunCreatedBy", fields: [createdBy], references: [id])
  items       PayrollItem[]
  adjustments PayrollAdjustment[]

  @@unique([month, year, status])
  @@index([month, year])
}

model PayrollItem {
  id               String  @id @default(cuid())
  payrollRunId     String
  employeeId       String
  totalHours       Decimal @db.Decimal(10, 2)
  totalShifts      Int     @default(0)
  basePay          Decimal @db.Decimal(12, 2)
  adjustmentsTotal Decimal @db.Decimal(12, 2)
  netPay           Decimal @db.Decimal(12, 2)

  payrollRun PayrollRun @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)
  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([payrollRunId, employeeId])
}

model PayrollAdjustment {
  id           String   @id @default(cuid())
  payrollRunId String
  employeeId   String
  amount       Decimal  @db.Decimal(12, 2)
  reason       String
  createdBy    String
  createdAt    DateTime @default(now())

  payrollRun PayrollRun @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)
  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  creator    User       @relation("PayrollAdjustmentCreatedBy", fields: [createdBy], references: [id])

  @@index([payrollRunId, employeeId])
}

model PasskeyAttempt {
  id            String   @id @default(cuid())
  employeeId    String   @unique
  attemptsCount Int      @default(0)
  lockedUntil   DateTime?
  updatedAt     DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  action     String
  entityType String
  entityId   String
  metadata   Json?
  createdAt  DateTime @default(now())

  actor User @relation(fields: [actorId], references: [id], onDelete: Cascade)

  @@index([entityType, entityId])
}
